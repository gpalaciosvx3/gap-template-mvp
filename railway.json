{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm run build",
    "watchPaths": [
      "backend/**",
      "gateway/**",
      "frontend/**",
      "tsconfig.json",
      "jest.config.ts",
      "vite.config.ts",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "node dist/gateway/server.js"
  }
} 